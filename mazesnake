namespace Mazes;

public static class SnakeMazeTask
{
    public static void MoveOut(Robot robot, int width, int height)
    {
        while (!robot.Finished)
        {
            MoveInSnakePattern(robot, width);
        }
    }

    private static void MoveTo(Robot robot, int steps, Direction direction)
    {
        for (var i = 0; i < steps; i++)
        {
            robot.MoveTo(direction);
        }
    }

    private static void MoveInSnakePattern(Robot robot, int width)
    {
        MoveTo(robot, width - 3, Direction.Right);
        MoveTo(robot, 2, Direction.Down);
        MoveTo(robot, width - 3, Direction.Left);

		if (robot.Finished)
        {
            return;
        }
        MoveTo(robot, 2, Direction.Down);
    }
}
