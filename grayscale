namespace Recognizer;

public static class GrayscaleTask
{
    private const double Blue = 0.114;
    private const double Green = 0.587;
    private const double Red = 0.299;
    
	public static double[,] ToGrayscale(Pixel[,] original)
	{
        var width = original.GetLength(0);
        var height = original.GetLength(1);
		var grayscale = new double[width, height];
		
		for (var x = 0; x < width; x++)
		{
            for (var y = 0; y < height; y++)
			{
				var pixel = original[x, y];
                grayscale[x, y] = (Red * pixel.R + Green * pixel.G + Blue * pixel.B) / 255.0;
			}
		}
        return grayscale;
	}
}
